<local:MyPageRight x:Class="PageOtherLog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PCL"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      PanScroll="{Binding ElementName=PanBack}" RenderOptions.BitmapScalingMode="LowQuality">
    <local:MyScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" x:Name="PanBack">
        <DockPanel>
            <local:MyCard DockPanel.Dock="Top" Title="日志操作" Margin="25,25,25,5">
                <WrapPanel ItemHeight="35" Margin="25,40,20,20">
                    <local:MyButton MinWidth="100" Text="导出日志" ColorType="Highlight" Margin="0,0,15,0" Click="ButtonExport_OnClick"/>
                    <local:MyButton MinWidth="120" Text="导出全部日志" ColorType="Normal" Margin="0,0,15,0" Click="ButtonExportAll_OnClick"/>
                    <local:MyButton MinWidth="120" Text="打开日志目录" ColorType="Normal" Margin="0,0,15,0" Click="ButtonOpenDir_OnClick"/>
                    <local:MyButton MinWidth="120" Text="清理历史日志" ColorType="Red" Click="ButtonClean_OnClick"/>
                </WrapPanel>
            </local:MyCard>
            <local:MyCard Title="所有日志" Margin="25,10,25,25" x:Name="PanContent">
                <StackPanel Name="PanList" Orientation="Vertical" Margin="20,36,18,22">

                </StackPanel>
            </local:MyCard>
        </DockPanel>
        
    </local:MyScrollViewer>
</local:MyPageRight>
